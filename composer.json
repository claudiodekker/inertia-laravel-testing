{
    "name": "claudiodekker/inertia-laravel-testing",
    "description": "Testing helpers for https://github.com/inertiajs/inertia-laravel",
    "keywords": [
        "claudiodekker",
        "laravel",
        "inertia",
        "testing",
        "helpers",
        "phpunit"
    ],
    "homepage": "https://github.com/claudiodekker/inertia-laravel-testing",
    "license": "MIT",
    "authors": [
        {
            "name": "Claudio Dekker",
            "email": "claudio@ubient.net",
            "homepage": "https://dekker.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "inertiajs/inertia-laravel": "^v0.3",
        "laravel/framework": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "ClaudioDekker\\Inertia\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClaudioDekker\\Inertia\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ClaudioDekker\\Inertia\\InertiaTestingServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
